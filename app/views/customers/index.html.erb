<div class="breadcrumbs">
    <span>
        <span>
            <%= link_to "Home", root_path %> Â»
            <span>
                <strong class="breadcrumb_last" aria-current="page">My Account</strong>
            </span>
        </span>
    </span>
</div>

<h1>My Account</h1>
<h2 class="mt-3 mb-3">Account Details</h2>
<% if @current_customer.nil? %>
    <% if @error_message %>
    <div class="alert alert-danger">
        <h2>An error has occurred</h2>
        <p><%= @error_message %></p>
        <%= link_to "Register/Login", customers_auth_path, class: "btn btn-product-details" %>
    </div>
    <% else %>
    <div class="alert alert-danger">
        <h2>Your have to be logged in to access this page.</h2>
        <%= link_to "Register/Login", customers_auth_path, class: "btn btn-product-details" %>
    </div>
    <% end %>
<% else %>
<p>Below you will find your account details
<%= link_to "Logout Now", customers_logout_path, method: :post, class: "btn btn-product-details ml-3" %>
</p>
<div class="container-white shopping-cart" style="margin: 0.5rem auto;">
    <h2><%= @current_customer.name %></h2>
    <h5>Account Email: <%= @current_customer.email %></h5>
    <p>
      Shipping Address: <br/>
      <%= @current_customer.address_line %>, <%= @current_customer.city %>, <%= @current_customer.province.name %>, <%= @current_customer.country %> <br/>
      Postal Code: <%= @current_customer.postal_code %>
    </p>
    <%= link_to "My Orders", orders_path, class: "btn btn-product-details ml-3" %>
</div>

<% end %>
