<div class="breadcrumbs">
    <span>
        <span>
            <%= link_to "Home", root_path %> Â» 
            <span>
                <strong class="breadcrumb_last" aria-current="page"><%= @department.name %></strong>
            </span>
        </span>
    </span>
</div>

<h1><%= @department.name %></h1>

<% if @products.empty? %>
    <p>There are no products found.</p>
<% else %>
    <p class="page-filter-container">Filter by 
        <span class="page-filter<%= " current" if @filter == "" %>"><%= link_to "Clear Filters", department_path(@department.id) %></span>
        <span class="page-filter<%= " current" if @filter == "new" %>"><%= link_to "New Products", department_path(@department.id, filter: "new") %></span>
        <span class="page-filter<%= " current" if @filter == "recent" %>"><%= link_to "Recently Updated", department_path(@department.id, filter: "recent") %></span>
    </p>
    <p><%= page_entries_info @products %></p>
    <div class="card-deck">
        <%= render @products %>
    </div>
<% end %>

<%= paginate @products, window: 2 %>
