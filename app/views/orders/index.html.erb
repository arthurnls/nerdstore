<div class="breadcrumbs">
    <span>
        <span>
            <%= link_to "Home", root_path %> »
            <span>
                <%= link_to "My Account", customers_path %> »
                <span>
                    <strong class="breadcrumb_last" aria-current="page">My Orders</strong>
                </span>
            </span>
        </span>
    </span>
</div>

<h1>My Account</h1>
<h2 class="mt-3 mb-3">All Orders</h2>
<% if @current_customer.nil? %>
    <div class="alert alert-danger">
        <h2>Your have to be logged in to access this page.</h2>
        <%= link_to "Register/Login", customers_auth_path, class: "btn btn-product-details" %>
    </div>
<% else %>
    <p>Below you will find your orders details
        <%= link_to "Logout Now", customers_logout_path, method: :post, class: "btn btn-product-details ml-3" %>
    </p>

    <div class="container-white shopping-cart" style="margin: 0.5rem auto;">
        <% if @orders.empty? %>
            <h2>Your have not created any order yet.</h2>
        <% else %>
            <ul class="list-group list-inline">
            <% @orders.each do |order| %>
                <li class="">
                <%= link_to "Order Number ##{order.id} (Status: #{order.status})", order, class: "list-group-item list-inline-item d-block border-0" %>
                </li>
            <% end %>
            </ul>
        <% end %>
    </div>
<% end %>
