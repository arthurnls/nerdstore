


<%#  style="max-width: 13rem;" %>
<div class="card card-product">
    <%= link_to product_path(:id => product.id) do %>
        <% if images.empty? %>
            <%= image_tag("image_coming_soon.jpg", alt:product.name + " missing image", class:"card-img-top") %>
        <% else %>
            <%= image_tag(images[0].path, alt:product.name + " image", class:"card-img-top") %>
        <% end %>
        <div class="card-body">
            <h5 class="card-title product-title"><%= product.name %></h5>
            <p class="card-text product-price">CDN$ <%= product.price %></p>
            <%# <div style="max-width: 13rem; margin: 0 auto;"> %>
            <div class="text-center">
                <div class="btn btn-product-details">Click for Details</div>
            </div>
        </div>
    <% end %>
</div>

    
        




