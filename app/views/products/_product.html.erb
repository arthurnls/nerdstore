
<div class="card card-product mb-5">
    <%= link_to product_path(:id => product.id) do %>
        <% if product.images[0].path.empty? or product.images[0].path.gsub(" ","") == "" %>
            <%= image_tag("image_coming_soon.jpg", alt:product.name + " missing image", class:"card-img-top") %>
        <% else %>
            <%= image_tag(product.images[0].path, alt:product.name + " image", class:"card-img-top") %>
        <% end %>
        <div class="card-body">
            <h6 class="card-title product-title"><%= product.name %></h6>
            <p class="card-text product-price font-weight-bold">CDN$ <%= product.price %></p>
            <div class="text-center">
                <div class="btn btn-product-details">Click for Details</div>
            </div>
        </div>
    <% end %>
</div>
