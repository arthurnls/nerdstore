<h1>All Products</h1>
<p>List of all products</p>


<% if @products.empty? %>
    <p>There are no products registered.</p>
<% else %>
    <div class="card-deck">
        <% @products.each do |product| %>
            <%= render partial: "product", locals: { product: product } %>
        <% end %>
    </div>
<% end %>

