
<h1><%= @product.name%></h1>

<% if @product.images.empty? %>
    <%= image_tag("image_coming_soon.jpg", alt:@product.name + " missing image", class:"card-img-top product-image") %>
<% else %>
    <%= image_tag(@product.images[0].path, alt:@product.name + " image", class:"card-img-top product-image") %>
<% end %>
        

<p>Description: <%= @product.description %></p>
<p>Price: CDN$ <%= number_with_precision(@product.price, :precision => 2) %></p>
<p>In Stock: <%= @product.stock_quantity %></p>
<p>Brand: <%= @product.brand.name %></p>
<p>Category: <%= @product.category.name %></p>
